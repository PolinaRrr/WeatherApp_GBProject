<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginTop"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_city_name"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:textSize="@dimen/textSize_textView_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_temp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:textSize="@dimen/textSize_textView_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_feel_like_temp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:textSize="@dimen/textSize_textView_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_condition"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:textSize="@dimen/textSize_textView_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_wind_speed"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:textSize="@dimen/textSize_textView_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_wind_dir"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:textSize="@dimen/textSize_textView_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_pressure"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:textSize="@dimen/textSize_textView_text" />

    </LinearLayout>
    
</LinearLayout>